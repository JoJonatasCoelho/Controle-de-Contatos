@model List<ContatoModel> 
@{
    ViewData["Title"] = "Listagem de contatos";
}
<div>
    <a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Criar">Criar novo contato</a>
</div>

<div class="text-center">
    <h1 class="display-4">Listagem de contatos</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Celular</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td colspan="1">@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Telefone</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">

                                <a role="button" class="btn btn-primary" asp-route-id="@contato.Id" 
                                asp-controller="Contato" asp asp-action="Editar">Editar</a>

                                <a role="button" class="btn btn-danger" asp-route-id="@contato.Id"
                                asp-controller="Contato" asp asp-action="Confirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }    
            }
        </tbody>
    </table>

</div>
